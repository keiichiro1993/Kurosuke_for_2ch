<Application
    x:Class="Kurosuke_for_2ch.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kurosuke_for_2ch"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="Styles/SplitViewStyles.xaml" />-->
                <ResourceDictionary Source="Styles/NavRadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="NavRadioButtonStyleEx" TargetType="RadioButton"
             BasedOn="{StaticResource NavRadioButtonStyle}"
             >
                <Setter Property="Background" Value="#FF5A5A5A" />
                <Setter Property="FontFamily" Value="Yu Gothic Medium" />
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="FontSize" Value="24" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
